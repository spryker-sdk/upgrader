{
    "name": "spryker-sdk/upgrader",
    "type": "library",
    "description": "Code evaluator and upgrader tool",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-simplexml": "*",
        "davidrjonas/composer-lock-diff": "^1.6",
        "ergebnis/json-printer": "^3.1",
        "guzzlehttp/guzzle": "^7.4",
        "http-interop/http-factory-guzzle": "^1.0",
        "knplabs/github-api": "^3.4",
        "m4tthumphrey/php-gitlab-api": "^11.5",
        "nikic/php-parser": "^4.13",
        "phpstan/phpstan": "^1.2",
        "spryker-sdk/sdk-contracts": "dev-master",
        "spryker/code-sniffer": "^0.17.3",
        "symfony/config": "^5.0",
        "symfony/console": "^5.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/filesystem": "^5.3",
        "symfony/finder": "^5.3",
        "symfony/framework-bundle": "5.3.*",
        "symfony/http-kernel": "^5.0",
        "symfony/process": "^5.0",
        "symfony/yaml": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src/Core/",
            "Codebase\\": "src/Codebase/",
            "CodeCompliance\\": "src/CodeCompliance/",
            "Evaluate\\": "src/Evaluate/",
            "Upgrade\\": "src/Upgrade/",
            "Upgrader\\": "src/Upgrader/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeComplianceTest\\": "tests/CodeComplianceTest/",
            "CodebaseTest\\": "tests/CodebaseTest/",
            "CoreTest\\": "tests/Core/",
            "TestProject\\": "tests/data/Evaluate/Project/",
            "TestCore\\": "tests/data/Evaluate/Core/",
            "UpgradeData\\": "tests/data/Upgrade/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "cs-check": "phpcs --colors -p -s --extensions=php --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml --ignore=/tests/_data/ tests/ src/",
        "cs-fix": "phpcbf --colors -p --extensions=php --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml --ignore=/tests/_data/ tests/ src/",
        "stan": "phpstan analyze -l 8 src/",
        "tests": "phpunit tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
